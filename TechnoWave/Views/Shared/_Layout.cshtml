@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var token = HttpContextAccessor.HttpContext?.Request.Cookies["jwtToken"];
    bool isLoggedIn = !string.IsNullOrEmpty(token);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechnoWave</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <style>
        .hidden { display:none; }
    </style>
</head>
<body>

    <!-- ✅ Hide Navbar on Login/Register -->
    <header class="@(isLoggedIn ? "" : "hidden")">
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">

                <a class="navbar-brand fw-bold" href="/Dashboard/Index">TechnoWave</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarMain" aria-controls="navbarMain"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/Dashboard/Index">Dashboard</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <button id="btnLogout" class="btn btn-danger btn-sm">Logout</button>
                        </li>
                    </ul>

                </div>

            </div>
        </nav>
    </header>

    <!-- Main Body -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer (Hide when logged out) -->
    <footer class="border-top text-muted mt-5 p-3 @(isLoggedIn ? "" : "hidden")">
        <div class="container">
            © 2025 - TechnoWave
        </div>
    </footer>


    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <!-- Global JS -->
    <script src="~/js/core/config.js"></script>
    <script src="~/js/core/interceptor.js"></script>
    <script src="~/js/core/apiClient.js"></script>

    <script>
        // ✅ Logout button logic
        $("#btnLogout").click(function () {
            localStorage.removeItem("jwtToken");
            localStorage.removeItem("userName");

            // Remove cookie also (if used)
            document.cookie = "jwtToken=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;";

            window.location.href = "/Account/Login";
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
